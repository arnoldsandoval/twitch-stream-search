doctype html
html
  head
    title Twitch Search
    link(href='https://fonts.googleapis.com/css?family=Roboto', rel='stylesheet')
    link(rel='stylesheet', type='text/css', href='css/main.css')
  body
    .feature-search
      .header
        .branding
          .logo
            img(src='http://s.jtvnw.net/jtv_user_pictures/hosted_images/GlitchIcon_white.png', alt='Twitch logo')
